{
  "$anchor": "hotgraphic-course",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$patch": {
    "source": {
      "$ref": "course"
    },
    "with": {
      "properties": {
        "_globals": {
          "type": "object",
          "default": {},
          "properties": {
            "_hotgraphic": {
              "type": "object",
              "default": {},
              "properties": {
                "ariaRegion": {
                  "type": "string",
                  "title": "Region ARIA",
                  "default": "Obraz z zaznaczonymi obszarami. Wybierz każdy przycisk, aby wyświetlić więcej informacji.",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "popupPagination": {
                  "type": "string",
                  "title": "Paginacja w oknach wyskakujących",
                  "description": "To jest etykieta aria dla każdego elementu. Użyj {{itemNumber}} i {{totalItems}} w swoim tekście, aby poinformować użytkownika, który element ogląda i ile elementów jest w sumie.",
                  "default": "{{itemNumber}} / {{totalItems}}",
                  "_adapt": {
                    "translatable": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
